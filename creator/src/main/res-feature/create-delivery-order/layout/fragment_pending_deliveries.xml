<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="me.darrillaga.torgonudo.creator.createdeliveryorder.viewmodel.MyOrdersViewModel"/>

        <variable
            name="createViewModel"
            type="me.darrillaga.torgonudo.viewer.viewpendingorders.viewmodel.CreateDeliveryOrderViewModel"/>

        <import type="android.support.v7.widget.LinearLayoutManager"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        style="@style/Base.ContainerWithoutPadding"
        android:fitsSystemWindows="true">

        <android.support.v4.widget.NestedScrollView
            style="@style/Base.ContainerWithoutPadding"
            android:fillViewport="true">

            <RelativeLayout
                style="@style/Base.ContainerWithoutPadding"
                android:orientation="vertical">

                <include
                    android:id="@+id/createDeliveryOrderLayout"
                    layout="@layout/view_create_delivery_order"
                    app:viewModel="@{createViewModel}"
                    app:eventsHandler="@{createEventsHandler}"/>

                <View
                    android:id="@+id/createDeliveryOrderLayoutListDivider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/unity"
                    android:layout_below="@+id/createDeliveryOrderLayout"
                    android:background="@drawable/dw_transparent_divider"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/createDeliveryOrderLayoutListDivider"
                    style="@style/Base.Wrapper.FullWidth"
                    app:dividerDrawable="@{@drawable/dw_transparent_divider}"
                    app:dividerDirection="@{LinearLayoutManager.VERTICAL}"
                    app:dataSet="@{viewModel.deliveryOrders}">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>